


<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">

    <!--Begin::App-->
    <div class="kt-grid kt-grid--desktop kt-grid--ver kt-grid--ver-desktop kt-app">
        <!--Begin:: App Aside Mobile Toggle-->
        <button class="kt-app__aside-close" id="kt_user_profile_aside_close">
            <i class="la la-close"></i>
        </button>
        <!--End:: App Aside Mobile Toggle-->
        <!--Begin:: App Aside-->
        <div class="kt-grid__item kt-app__toggle kt-app__aside" id="kt_user_profile_aside">
            <!--begin:: Widgets/Applications/User/Profile1-->
            <div class="kt-portlet ">
                <div class="kt-portlet__head  kt-portlet__head--noborder">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                        </h3>
                    </div>

                </div>
                <div class="kt-portlet__body kt-portlet__body--fit-y">
                    <!--begin::Widget -->
                    <div class="kt-widget kt-widget--user-profile-1">
                        <div class="kt-widget__head">
                            <div class="kt-widget__media">
                                <img src="@ViewBag.Show_Pro.ad_avatarprofile" alt="image">
                            </div>
                            <div class="kt-widget__content">
                                <div class="kt-widget__section">
                                    <a class="kt-widget__username">
                                        @ViewBag.Show_Pro.ad_firstname   @ViewBag.Show_Pro.ad_lastname
                                    </a>
                                    <span class="kt-widget__subtitle">
                                        @ViewBag.Show_Pro.ad_type_name
                                    </span>
                                </div>

                                <div class="kt-widget__action">
                                    <button type="button" class="btn btn-info btn-sm">چت</button>
                                </div>
                            </div>
                        </div>
                        <div class="kt-widget__body">
                            <div class="kt-widget__content">
                                <div class="kt-widget__info">
                                    <span class="kt-widget__label">ایمیل:</span>
                                    <a class="kt-widget__data"> @ViewBag.Show_Pro.ad_email</a>
                                </div>
                                <div class="kt-widget__info">
                                    <span class="kt-widget__label">موبایل:</span>
                                    <a class="kt-widget__data">@ViewBag.Show_Pro.ad_mobile</a>
                                </div>
                                <div class="kt-widget__info">
                                    <span class="kt-widget__label">تلفن:</span>
                                    <span class="kt-widget__data">@ViewBag.Show_Pro.ad_phone</span>
                                </div>
                            </div>

                            <div class="kt-widget__items">
                                <a id="info" onclick="getdata('info')" class="kt-widget__item ">
                                    <span class="kt-widget__section">
                                        <span class="kt-widget__icon">
                                            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1" class="kt-svg-icon">
                                                <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                    <polygon points="0 0 24 0 24 24 0 24"></polygon>
                                                    <path d="M12,11 C9.790861,11 8,9.209139 8,7 C8,4.790861 9.790861,3 12,3 C14.209139,3 16,4.790861 16,7 C16,9.209139 14.209139,11 12,11 Z" fill="#000000" fill-rule="nonzero" opacity="0.3"></path>
                                                    <path d="M3.00065168,20.1992055 C3.38825852,15.4265159 7.26191235,13 11.9833413,13 C16.7712164,13 20.7048837,15.2931929 20.9979143,20.2 C21.0095879,20.3954741 20.9979143,21 20.2466999,21 C16.541124,21 11.0347247,21 3.72750223,21 C3.47671215,21 2.97953825,20.45918 3.00065168,20.1992055 Z" fill="#000000" fill-rule="nonzero"></path>
                                                </g>
                                            </svg>
                                        </span>
                                        <span class="kt-widget__desc">
                                            اطلاعات شخصی
                                        </span>
                                    </span>
                                </a>

                                <a id="pass" onclick="getdata('pass')" class="kt-widget__item ">
                                    <span class="kt-widget__section">
                                        <span class="kt-widget__icon">
                                            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1" class="kt-svg-icon">
                                                <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                    <rect x="0" y="0" width="24" height="24"></rect>
                                                    <path d="M4,4 L11.6314229,2.5691082 C11.8750185,2.52343403 12.1249815,2.52343403 12.3685771,2.5691082 L20,4 L20,13.2830094 C20,16.2173861 18.4883464,18.9447835 16,20.5 L12.5299989,22.6687507 C12.2057287,22.8714196 11.7942713,22.8714196 11.4700011,22.6687507 L8,20.5 C5.51165358,18.9447835 4,16.2173861 4,13.2830094 L4,4 Z" fill="#000000" opacity="0.3"></path>
                                                    <path d="M12,11 C10.8954305,11 10,10.1045695 10,9 C10,7.8954305 10.8954305,7 12,7 C13.1045695,7 14,7.8954305 14,9 C14,10.1045695 13.1045695,11 12,11 Z" fill="#000000" opacity="0.3"></path>
                                                    <path d="M7.00036205,16.4995035 C7.21569918,13.5165724 9.36772908,12 11.9907452,12 C14.6506758,12 16.8360465,13.4332455 16.9988413,16.5 C17.0053266,16.6221713 16.9988413,17 16.5815,17 C14.5228466,17 11.463736,17 7.4041679,17 C7.26484009,17 6.98863236,16.6619875 7.00036205,16.4995035 Z" fill="#000000" opacity="0.3"></path>
                                                </g>
                                            </svg>
                                        </span>
                                        <span class="kt-widget__desc">
                                            تغییر رمز عبور
                                        </span>
                                    </span>
                                </a>

                            </div>
                        </div>
                    </div>
                    <!--end::Widget -->
                </div>
            </div>
            <!--end:: Widgets/Applications/User/Profile1-->
        </div>
        <!--End:: App Aside-->
        <!--Begin:: App Content-->
        <div id="_info" class="kt-grid__item kt-grid__item--fluid kt-app__content " style="display:none">
            <div class="row">
                <div class="col-xl-12">
                    <div class="kt-portlet">
                        <div class="kt-portlet__head">
                            <div class="kt-portlet__head-label">

                                <h3 class="kt-portlet__head-title">اطلاعات شخصی <small>اطلاعات شخصی خود را به روز کنید</small></h3>
                            </div>

                        </div>

                        <div class="kt-form kt-form--label-right">
                            <div class="kt-portlet__body">
                                <div class="kt-section kt-section--first">
                                    <div class="kt-section__body">
                                        <div class="row">
                                            <label class="col-xl-3"></label>
                                            <div class="col-lg-9 col-xl-6">
                                                <h3 class="kt-section__title kt-section__title-sm">اطلاعات سرپرست:</h3>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-xl-3 col-lg-3 col-form-label">تصویر</label>
                                            <div class="col-lg-9 col-xl-6">
                                                <div class="kt-avatar kt-avatar--outline" id="kt_user_avatar">
                                                  
                                                    <div id="show_image" class="kt-avatar__holder" style="background-image: url(@ViewBag.Show_Pro.ad_avatarprofile)"></div>
                                                    <label class="kt-avatar__upload" data-toggle="kt-tooltip" title="" data-original-title="تغییر تصویر">
                                                        <input id="uploderInput" onchange="Uploding_uploder('info_data')" type="file" accept=".png,.jpg,.jpeg" />
                                                        <i class="fa fa-pen"></i>

                                                    </label>
                                                    <input id="image" type="text" value=" ViewBag.Show_Pro.ad_avatarprofile" style="display:none">
                                                </div>
                                            </div>
                                        </div>









                                        <div class="form-group row">
                                            <label class="col-xl-3 col-lg-3 col-form-label">نام</label>
                                            <div class="col-lg-9 col-xl-6">
                                                <input id="name" class="form-control" type="text" value=" @ViewBag.Show_Pro.ad_firstname" required>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-xl-3 col-lg-3 col-form-label">نام خانوادگی</label>
                                            <div class="col-lg-9 col-xl-6">
                                                <input id="last" class="form-control" type="text" value=" @ViewBag.Show_Pro.ad_lastname" required>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-xl-3 col-lg-3 col-form-label">نام مستعار</label>
                                            <div class="col-lg-9 col-xl-6">
                                                <input id="nick" class="form-control" type="text" value=" @ViewBag.Show_Pro.ad_NickName">
                                            </div>
                                        </div>


                                        <div class="row">
                                            <label class="col-xl-3"></label>
                                            <div class="col-lg-9 col-xl-6">
                                                <h3 class="kt-section__title kt-section__title-sm">اطلاعات تماس:</h3>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-xl-3 col-lg-3 col-form-label">شماره تلفن</label>
                                            <div class="col-lg-9 col-xl-6">
                                                <div class="input-group">
                                                    <div class="input-group-prepend"><span class="input-group-text"><i class="la la-phone"></i></span></div>
                                                    <input id="phone" type="text" class="form-control" value="@ViewBag.Show_Pro.ad_phone" placeholder="تلفن" aria-describedby="basic-addon1" required>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-xl-3 col-lg-3 col-form-label">شماره موبایل</label>
                                            <div class="col-lg-9 col-xl-6">
                                                <div class="input-group">
                                                    <div class="input-group-prepend"><span class="input-group-text"><i class="la la-mobile"></i></span></div>
                                                    <input id="mobile" type="text" class="form-control" value="@ViewBag.Show_Pro.ad_mobile" placeholder="موبایل" aria-describedby="basic-addon1" required>
                                                </div>
                                                <span class="form-text text-muted">ما هرگز موبایل شما را با هیچ کسی به اشتراک نمی گذاریم.</span>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-xl-3 col-lg-3 col-form-label">آدرس ایمیل</label>
                                            <div class="col-lg-9 col-xl-6">
                                                <div class="input-group">
                                                    <div class="input-group-prepend"><span class="input-group-text"><i class="la la-at"></i></span></div>
                                                    <input id="email" type="email" class="form-control" value="@ViewBag.Show_Pro.ad_email" placeholder=" ایمیل" aria-describedby="basic-addon1" required>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                            </div>


                            <div id="ERRAlertNew" class="alert alert-solid-danger alert-bold fade show kt-margin-t-20 kt-margin-b-40" role="alert" style="display: none;">
                                <div class="alert-icon"><i class="fa fa-exclamation-triangle"></i></div>
                                <div class="alert-text">مقدار ورودی باید پرشده باشد!</div>
                                <div class="alert-close">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true"><i class="la la-close"></i></span>
                                    </button>
                                </div>
                            </div>

                            <div class="kt-portlet__foot">
                                <div class="kt-form__actions">
                                    <div class="row">
                                        <div class="col-lg-3 col-xl-3">
                                        </div>


                                        <div class="col-lg-9 col-xl-9">
                                            <button type="submit" onclick="postto('information')" class="btn btn-success">ثبت</button>&nbsp;
                                            <button type="reset" class="btn btn-secondary">لغو کردن</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="_pass" class="kt-grid__item kt-grid__item--fluid kt-app__content" style="display:none">
            <div class="row">
                <div class="col-xl-12">
                    <div class="kt-portlet kt-portlet--height-fluid">
                        <div class="kt-portlet__head">
                            <div class="kt-portlet__head-label">
                                <h3 class="kt-portlet__head-title">تغییر رمز عبور<small>گذرواژه حساب خود را تغییر یا تنظیم مجدد کنید</small></h3>
                            </div>

                        </div>
                        <div class="kt-form kt-form--label-right">
                            <div class="kt-portlet__body">
                                <div class="kt-section kt-section--first">
                                    <div class="kt-section__body">

                                        <div class="row">
                                            <label class="col-xl-3"></label>
                                            <div class="col-lg-9 col-xl-6">
                                                <h3 class="kt-section__title kt-section__title-sm">رمز عبور خود را تغییر داده یا بازیابی کنید:</h3>
                                            </div>
                                        </div>
                                        <div class="form-group row" style="margin-bottom: 4rem;">
                                            <label class="col-xl-3 col-lg-3 col-form-label">رمز عبور فعلی</label>
                                            <div class="col-lg-9 col-xl-6">
                                                <input id="pass_o" type="password" class="form-control" value="" placeholder="رمز عبور فعلی" required>

                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-xl-3 col-lg-3 col-form-label">رمز عبور جدید</label>
                                            <div class="col-lg-9 col-xl-6">
                                                <input id="pass_n1" type="password" class="form-control" value="" placeholder="رمز عبور جدید" required>
                                            </div>
                                        </div>
                                        <div class="form-group form-group-last row">
                                            <label class="col-xl-3 col-lg-3 col-form-label">تائید رمز عبور</label>
                                            <div class="col-lg-9 col-xl-6">
                                                <input id="pass_n2" type="password" class="form-control" value="" placeholder="تائید رمز عبور" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div id="ERRAlertNew2" class="alert alert-solid-danger alert-bold fade show kt-margin-t-20 kt-margin-b-40" role="alert" style="display: none;">
                                <div class="alert-icon"><i class="fa fa-exclamation-triangle"></i></div>
                                <div id="_ERRAlertNew2" class="alert-text">مقدار ورودی باید پرشده باشد!</div>
                                <div class="alert-close">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true"><i class="la la-close"></i></span>
                                    </button>
                                </div>
                            </div>

                            <div class="kt-portlet__foot">
                                <div class="kt-form__actions">
                                    <div class="row">
                                        <div class="col-lg-3 col-xl-3">
                                        </div>

                                        <div class="col-lg-9 col-xl-9">
                                            <button onclick="postto('password')" class="btn btn-brand btn-bold">تغییر رمز عبور</button>&nbsp;
                                            <button type="reset" class="btn btn-secondary">لغو کردن</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!--End:: App Content-->
        </div>
        <!--End::App-->
    </div>
    <!-- end:: Content -->
</div>
