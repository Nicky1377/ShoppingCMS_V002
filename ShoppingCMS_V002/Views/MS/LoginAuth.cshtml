
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Login - SAAV</title>

    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
    @Styles.Render("~/assets/Auth.css")
    <script src="https://js.cx/libs/animate.js"></script>

</head>
<body>


<section id='LoginContent' style="background-image: url('@Url.Content("~/assets/Auth/img/BackGroundLogin.png")')">
    <form id="login_form" action='/login' method='POST' enctype="application/x-www-form-urlencoded">
        <div class='login'>
            <div class="PAnDa" style="height: 350px; width: 350px; left: 0px; right: 0px;">
                <div class="center" id="TSHPandaPanda">
                    <div class="body"></div>
                    <div class="chest"></div>
                    <svg class="panda idle" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 199.13 148">
                        <path class="ear leftear" d="M47.08 17c-5.92-8-13.91-18.74-30-6.82S9 32.86 15 40.84 32.88 50 41.75 43.38 53 25 47.08 17z" />
                        <path class="ear rightear" d="M152.91 17c5.92-8 13.91-18.74 30-6.82S191 32.86 185 40.84s-17.89 9.16-26.76 2.54S147 25 152.91 17z" />

                        <path class="head" d="M198.65 74c5.92 40.44-44.32 74-99 74s-106-33.74-99-74C5.6 45.71 25.72 20.42 56.42 8a115 115 0 0 1 43.23-8 118 118 0 0 1 44.7 8.37c30.21 12.33 50.12 37.04 54.3 65.63z" fill="#fff" />

                        <path class="feature rightpatch" d="M125.52 42.48c-4.77 7-5.2 18.14-3.42 26C125.78 84.86 140.92 93 156 96.94c9.24 2.43 23 3.35 26.51-8C187 74.62 176.29 55.57 168 44.72c-12-15.56-30.14-20.26-42.48-2.24z" />
                        <path class="feature righteyepatch" d="M130.58 66.16C128 79 153.79 86.93 154.94 71.29c.87-11.93-21.58-18.91-24.36-5.13z" fill="#fff" />
                        <ellipse class="eye righteye" cx="142.21" cy="70.5" rx="7.5" ry="1" />

                        <path class="feature leftpatch" d="M73 42.48c4.77 7 5.2 18.14 3.42 26C72.73 84.86 57.59 93 42.49 96.94c-9.23 2.43-23 3.35-26.51-8-4.46-14.34 6.25-33.39 14.57-44.24C42.5 29.16 60.66 24.46 73 42.48z" />
                        <path class="feature lefteyepatch" d="M67.78 66.16C70.37 79 44.56 86.93 43.42 71.29 42.55 59.36 65 52.38 67.78 66.16z" fill="#fff" />
                        <ellipse class="eye lefteye" cx="56.15" cy="70.5" rx="7.5" ry="1" />

                        <path class="feature nose" d="M87.65 85.55c0-3.45 2.18-6.55 12-6.55s12 3.1 12 6.55c0 4.36-7.64 12-12 12s-12-6.55-12-12z" />
                        <ellipse class="mouth feature" cx="99.65" cy="123" rx="10" ry="3" />
                    </svg>
                </div>
            </div>

            <div class='login_title'>
                <span>Login To The TSHPanda Admin Panel</span>
            </div>
            <div class='login_fields'>
                <div class='login_fields__user PandaInputsLogin'>
                    <div class='icon'>
                        <i class="fa fa-user" style="color: white;"></i>
                    </div>
                    <input placeholder='User Name' class="key" type='text' id='usernametxt' onkeyup="logininfromationChanged(1,this);" value="">
                    <div class='validation'>
                        <i class="fa fa-check" style="color: white;"></i>
                    </div>
                    </input>
                </div>
                <div class='login_fields__password PandaInputsLogin'>
                    <div class='icon'>
                        <i class="fa fa-lock" style="color: white;"></i>
                    </div>
                    <input placeholder='Pass Word' class="key" name="password" id='passwordtxt' onkeyup="logininfromationChanged(2,this);" type='password' value="">
                    <div class='validation'>
                        <i class="fa fa-check" style="color: white;"></i>
                    </div>
                </div>
                <div class='login_fields__submit padbot' style="top: 0px;">
                    <div class="forgot" style="display: inline-flex; float:left;direction:rtl; ">
                        <label for="RememberMe" style="color: white; font-size: 24px;">Remember me!</label>
                        <input type="checkbox" id='RememberMe' class="key" value='Log In'>
                    </div>
                </div>

                <div class='login_fields__submit'>
                    <input type='submit' id='loginButton' class="key" value='Log In'>
                    <div class='forgot'>
                        <a href='/forgot' class="key">ForGot PassWord ?!</a>
                    </div>
                </div>
            </div>
            <div class='feedback success'>
                <h2>Logged In</h2>
                <p>Will Retriving To The Panel As Soon As Possible ! </p>
            </div>
            <div class='feedback error' id='error'>
                <h2>Connected SuccessFull </h2>
            </div>
            <div class='disclaimer'>
                <p>© Copyright 2019-2020 <a href="https://www.TSHPanda.com/" style="color: #0097af !important">TSHPANDA Tech Team</a></p>
            </div>
        </div>
    </form>
    <div class='authent' id="Authenn">
        <img src="@Url.Content("~/assets/Auth/img/logoResize.png")" class='logoAutenticacao' />
        <img src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/217233/puff.svg'>
        <p>Loging In ...</p>
    </div>

</section>

<!-- partial -->
<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js'></script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js'></script>
@Scripts.Render("~/bundles/Auth/mainlogin.js")
<script src='https://cdnjs.cloudflare.com/ajax/libs/tone/13.3.11/Tone.min.js'></script>
@Scripts.Render("~/bundles/Auth/panda.js")

<script>

    function logininfromationChanged(which, inp) {

        if (which === 1) {
            if ($(inp).val().length >= 1) {
                $("#TSHPandaPanda").animate({
                    backgroundColor: "#348495"
                }, 1000);
            } else {
                $("#TSHPandaPanda").animate({
                    backgroundColor: "#606060"
                }, 1000);
            }
        } else {
            if ($(inp).val().length >= 1) {
                $("#TSHPandaPanda").animate({
                    backgroundColor: "#00d3ff"
                }, 1000);
            } else {
                $("#TSHPandaPanda").animate({
                    backgroundColor: "#606060"
                }, 1000);
            }
        }

    }

</script>
</body>
</html>

