
@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="kt-portlet__head">
    <div class="kt-portlet__head-label">
        <h3 class="kt-portlet__head-title">
            نظرات کاربران
        </h3>
    </div>
</div>
<div class="kt-portlet__body">

    <!--begin::Section-->
    <div class="kt-section">
        <span class="kt-section__info">
            لیست تمامی دسته بندی های اصلی را در جدول زیر میتوانید مشاهده کنید.
        </span>
        <div class="kt-section__content">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>اسم محصول</th>
                        <th>اسم کاربر</th>
                        <th>نظرات</th>
                        <th>زمان ثبت</th>
                        <th>وضعیت</th>
                        <th>اقدامات</th>
                    </tr>
                </thead>

                <tbody>
                    @for (int i = 0; i < ViewBag.opin.Count; i++)
                    {
                        <tr id="@ViewBag.opin[i].id_Opinion">
                            <th scope="row">@i</th>
                            <td>@ViewBag.opin[i].id_MProduct</td>
                            <td>
                                @ViewBag.opin[i].id_Customer<br />


                                @if (ViewBag.opin[i].Rate == "5")
                                {
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="color: #ffcc00; font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="color: #ffcc00; font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="color: #ffcc00; font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="color: #ffcc00; font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="color: #ffcc00; font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                }
                                else if (ViewBag.opin[i].Rate == "4")
                                {
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="color: #ffcc00; font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="color: #ffcc00; font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="color: #ffcc00; font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="color: #ffcc00; font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                }
                                else if (ViewBag.opin[i].Rate == "3")
                                {
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="color: #ffcc00; font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="color: #ffcc00; font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="color: #ffcc00; font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                }
                                else if (ViewBag.opin[i].Rate == "2")
                                {
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="color: #ffcc00; font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="color: #ffcc00; font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                }
                                else if (ViewBag.opin[i].Rate == "1")
                                {
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="color: #ffcc00; font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                }
                                else if (ViewBag.opin[i].Rate == "0")
                                {
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                    <span class="fa fa-stack" style="width: 1em;height: 1em;"><i class="fa fa-star fa-stack-2x" style="font-size: x-small;"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
