                                }





                            </td>
                            <td>@ViewBag.opin[i].OpinionDescription</td>
                            <td>@ViewBag.opin[i].CreateDate</td>
                            <td>
                                @if (ViewBag.opin[i].Is_Accepted == "0")
                                {
                                    <span id="add @ViewBag.opin[i].id_Opinion" class="kt-badge kt-badge--inline kt-badge--danger">درخواست ثبت</span>
                                }
                                else
                                {
                                    <span id="on @ViewBag.opin[i].id_Opinion" class="kt-badge kt-badge--inline kt-badge--success">فعال</span>
                                }

                            </td>

                            <td>
                                <span class="dropdown">
                                    <a href="#" class="btn btn-sm btn-clean btn-icon btn-icon-md" data-toggle="dropdown" aria-expanded="true">
                                        <i class="la la-ellipsis-h"></i>
                                    </a>
                                    <span class="dropdown-menu dropdown-menu-right">
                                        @if (ViewBag.opin[i].Is_Accepted == "0")
                                        {
                                            <span class="dropdown-item">

                                                <button class="btn btn-bold btn btn-outline-danger" style="width: 100%;" data-toggle="modal" data-target="#PandaDeletModal" onclick="postToControll('@ViewBag.opin[i].id_Opinion','delete')"><i class="fa fa-eraser"><span style="font-family: IRANSansWeb; padding-right: 5px;">حذف</span></i></button>
                                            </span>
                                            <span class="dropdown-item">
                                                <button class="btn btn-bold btn btn-outline-success" style="width: 100%;" data-toggle="modal" data-target="#PandaonModal" onclick="postToControll('@ViewBag.opin[i].id_Opinion','on')"><i class="fa fa-check"><span style="font-family: IRANSansWeb; padding-right: 5px;">فعال سازی</span></i></button>
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="dropdown-item">
                                                <button class="btn btn-bold btn btn-outline-danger" style="width: 100%;" data-toggle="modal" data-target="#PandaDeletModal" onclick="postToControll('@ViewBag.opin[i].id_Opinion','delete')"><i class="fa fa-eraser"><span style="font-family: IRANSansWeb; padding-right: 5px;">حذف</span></i></button>
                                            </span>
                                        }
                                    </span>
                                </span>
