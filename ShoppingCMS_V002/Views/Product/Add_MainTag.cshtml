<script>
    $(document).ready(function () {

        $('#show_tabMain').load("@Url.Action("MainTag_table","Product",null,Request.Url.Scheme)");
//        alert("@Url.Action("MainTag_table","Product",null,Request.Url.Scheme)");

    });

    function modalloader(name, id) {

        document.getElementById("delete").innerHTML = name;
        $("#modeldelete").val(id);

        document.getElementById("edit").innerHTML = name;
        $("#modeledit").val(id);

        $('#SCVId_').text(id);
      //  alert(id);

    }

    function savePics(action) {
        var myObject = {
            firstName: "#model",
            lastName: action,
            fullName: function () {
                return this.firstName + "" + this.lastName;
            }
        }
        var x = myObject.fullName();
        var id = $(x).val();


        if (action == 'edit') {
            var naMee = document.getElementById("edit").innerHTML;

            $("#alll").hide();
            $('#inputNew').val(naMee);
            $('#newBtn').hide();
            $('#editBtn').show();





        } else if (action == 'delete') {

            var naMee = document.getElementById("delete").innerHTML;
            alert(naMee + "  delete");
            var PostJson = {
                'ActTodo': 'delete',
                'Name': $("#inputNew").val(),
                'Description': $("#inputDescription").val(),
                'id': $('#SCVId_').text()

            };

            $.ajax({
                url: '/Product/MainTag_Add_Update',
                type: "post",
                data: JSON.stringify(PostJson),
                contentType: "application/json; charset=utf-8",
                success: function (response) {
                    $("#ERRAlertEdit2").hide(300);
                    $("#SuccesAlertEdit2").show(300);

                    $('#show_tabMain').load("@Url.Action("MainTag_table","Product",null,Request.Url.Scheme)");

                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert(textStatus);
                }
            });

        }
        return false;
    }






    function SubmitedType(action) {

       if ($("#inputDescription").val() == '') {
            $("#ERRAlertEdit2").show(300);
        } else if ($("#inputNew").val() == '') {
            $("#ERRAlertEdit2").show(300);
        } else {

            var PostJson;
            alert(action);
            if (action == 'New') {
                PostJson = {
                    'ActTodo': 'insert',
                    'Name': $("#inputNew").val(),
                    'Description': $("#inputDescription").val(),
                    'id': 0
                };
            } else if (action == 'Edit') {
                var id = $('#SCVId_').text();
                alert("edit id : " + id);
                PostJson = {
                    'ActTodo': 'update',
                    'Name': $("#inputNew").val(),
                    'Description': $("#inputDescription").val(),
                    'id': id
                };
            }



            $.ajax({
                url: '/Product/MainTag_Add_Update',
                type: "post",
                data: JSON.stringify(PostJson),
                contentType: "application/json; charset=utf-8",
                success: function (response) {
                    $("#ERRAlertEdit2").hide(300);
                    $("#SuccesAlertEdit2").show(300);

                    if (action == 'Edit') {
                        $('#show_tabSCV').load("@Url.Action("MainTag_table","Product",null,Request.Url.Scheme)");
                        setTimeout(function () { $('#SuccesAlertEdit2').hide(500); }, 2000);
                        setTimeout(function () {
                            $('#editBtn').hide();
                            $('#newBtn').show();
                        }, 2000);
                    } else {
                        $('#show_tabSCV').load("@Url.Action("MainTag_table","Product",null,Request.Url.Scheme)");
                    }

                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert(textStatus);
                }
            });
        }

    }

</script>